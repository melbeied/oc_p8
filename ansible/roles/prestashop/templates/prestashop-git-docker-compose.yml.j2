version: "3"

networks:
  frontend:
volumes:
  db-data:

services:
  prestashop:
    build: resources/prestashop
    networks:
      frontend:
    ports:
      - "82:80"
    links:
      - mysql:mysql
    depends_on:
      - mysql
    volumes:
      - ./src:/var/www/html
    environment:
      - PS_DEV_MODE=1
      - DB_USER={{db_user}}
      - DB_PASSWD={{db_password}}
      - DB_NAME={{db_name}}
      - PS_INSTALL_AUTO=0
    command: ["/tmp/wait-for-it.sh", "--timeout=60", "--strict", "mysql:3306", "--", "/tmp/docker_run_git.sh"]
    restart: always

  mysql:
    image: mysql:5
    build: resources/mysql
    ports:
      - "3306:3306"
    volumes:
      - db-data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: {{db_password}}
      MYSQL_DATABASE: {{db_name}}
    restart: always
    networks:
      - frontend

